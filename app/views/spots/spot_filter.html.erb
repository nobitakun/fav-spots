<% content_for(:title, '神社仏閣検索') %>
<% content_for(:body_class, "spot") %>
<% content_for(:body_id, "filter") %>

<section>
  <h1>神社仏閣検索</h1>
  
  
  <!-- タブボタン部分 -->
  <!--<ul class="nav nav-pills nav-justified">-->
  <!--  <li class="nav-item">-->
