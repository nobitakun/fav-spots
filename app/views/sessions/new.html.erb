<% content_for(:title, 'ログイン画面') %>
<% content_for(:body_class, "login") %>
<% content_for(:body_id, "login") %>

<section>
  <div class="container row bg-white p-3 p-md-5 pt-5 pb-5 mb-5">
    <div class="col-12 col-md-8 mr-auto ml-auto">
  
      <%= form_for(:session, url: login_path) do |f| %>
  
        <div class="form-group">
          <%= f.label :email, 'メールアドレス' %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
  
        <div class="form-group">
          <%= f.label :password, 'パスワード' %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
  
        <%= f.submit 'ログイン', class: 'button_m btn_border hover mr-auto ml-auto' %>
      <% end %>
    </div>
  </div>
</section>
