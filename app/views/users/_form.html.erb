<%= form_for @user, html: {class: 'user-form'} do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label :name, '名前' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email, 'Email' %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :image, '画像' %><br />
    <%= user_icon_thumb(@user) %>
    <%= f.file_field :image %>
  </div>
  
  <% if root_logged_in? %>
    <div class="form-group">
      <%= f.label :root, 'root' %>
      <%= f.select :root, [['root権限を与えない', 'false'], ['root権限を与える', 'true']], {}, { class: 'form-control' } %>
    </div>
    <div class="form-group">
      <%= f.label :admin, 'admin' %>
      <%= f.select :admin, [['admin権限を与えない', 'false'], ['admin権限を与える', 'true']], {}, { class: 'form-control' } %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :password, 'パスワード' %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, 'パスワード確認' %>
    <%= f.password_field :password_confirmation, class: 'form-control' %>
  </div>

  <%= f.submit '登録する', class: 'button_m btn_border hover mr-auto ml-auto' %>
<% end %>