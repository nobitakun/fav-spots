<li>
  <%= link_to content_tag(:span, info.created_at.strftime('%Y.%m.%d'), class: 'mr-2 mr-md-5') + info.title, info.url, {target: '_blank'} %>
  <% if admin_logged_in? %>
    <div class="mt-3">
      <%= link_to '編集', edit_info_path(info), class: 'btn btn-lg btn-warning' %>
      <%= link_to '削除', info, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-lg btn-danger' %>
    </div>
  <% end %>
</li>