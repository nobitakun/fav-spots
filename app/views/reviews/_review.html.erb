<li class="col-3 text-left pt-0 pr-0 pl-0 pb-4">
  <% review.pictures.each do |picture| %>
    <%= review_thumb300(picture, 'card-img-left flex-auto') %>
    <% break %>
  <% end %>
  <div class="d-flex flex-column align-items-start p-2 mt-3">
    <a class="user-link" href="<%= user_path(review.user) %>"><%= user_icon_thumb60(review.user, 'rounded-circle') %><span class="mr-2"><%= review.user.name %></span><span class="time text-muted"><%= time_ago_in_words(review.created_at) %>前</span></a>
    <% unless params[:controller] == 'spots' && params[:action] == 'show' %>
      <h2 class="mt-2"><%= link_to review.spot.name, spot_path(review.spot) %></h2>
    <% end %>
    <p class="card-text"><%= review.comment %></p>
    <%= link_to '詳細を見る >>', review_path(id: review.spot.id, review_id: review.id), class: '' %>
  </div>
</li>